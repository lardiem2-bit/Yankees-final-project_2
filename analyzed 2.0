## Load packages
# NOTE: Install packages if these commands return an error!
library(readr)
library(psych)

## Set working directory
setwd("/courses/STA145/lardiem2")

## Load data
data <- read_delim("data.csv")

## STEP 1: Descriptive Statistics
summary(data$season_hits)  # Total hits per season
summary(data$season_hr)    # Total home runs per season

## STEP 2: Scatter Plot
plot(data$season_hr, data$season_hits,
     xlab = "Season Home Runs",
     ylab = "Season Hits",
     main = "Scatter Plot: Home Runs vs Hits")

# Add reference lines at means
abline(v = mean(data$season_hr), col = "black")
abline(h = mean(data$season_hits), col = "black")

## STEP 3: Linear Regression
linear_relationship <- lm(data$season_hits ~ data$season_hr)
summary(linear_relationship)

# Add regression line to scatterplot
abline(linear_relationship, col = "red")

## STEP 4: Residual Plot
plot(data$season_hr, residuals(linear_relationship),
     xlab = "Season Home Runs",
     ylab = "Residuals",
     main = "Residuals vs Home Runs")
abline(h = 0, col = "red")

## STEP 5: Histogram of Residuals
hist(residuals(linear_relationship),
     main = "Histogram of Residuals",
     xlab = "Residuals",
     col = "lightblue",
     breaks = 10) 
